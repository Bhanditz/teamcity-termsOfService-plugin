<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-autowire="constructor">

  <bean class="jetbrains.buildServer.termsOfService.TermsOfServiceHandlerInterceptor" lazy-init="false"/>


  <bean id="serviceTermsManager" class="jetbrains.buildServer.termsOfService.PropertyBasedManager">
    <constructor-arg>
      <bean class="jetbrains.buildServer.termsOfService.PropertyBasedConfig">
        <constructor-arg value=".teamcity.termsOfServices.accepted10"/>
        <constructor-arg value="/termsOfService.html"/>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="serviceTermsController" class="jetbrains.buildServer.termsOfService.TermsOfServiceController"/>
</beans>